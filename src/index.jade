        .jumbotron
            .container
                h1#title
                ul.nav.nav-pills
                    li(role="presentation").active
                        a(href="#guide")
                            span#menu-guide-label
                    li(role="presentation")
                        a(href="#sandbox")
                            span#menu-sandbox-label
                    li(role="presentation")
                        a(href="#about")
                            span#menu-about-label
                    li.pull-right
                        h2(style="margin:0")
                            a(href="#translate/en-US")
                                span(style="border-radius: 5px").flag-icon.flag-icon-us
                            a(href="#translate/pt-BR")
                                span(style="border-radius: 5px").flag-icon.flag-icon-br
        #content.container
            .page-header
                .btn-group.pull-right
                    button.btn#hide-content-button
                        span.caret
                h3#explanation-title

            .quote#explanation-content-container
                h5#explanation-content
            #status-panel.panel.panel-primary
                #status-title.panel-heading
                .panel-body
                    p#status-desc.text-center
                    p#how-to-use
                    .btn-group.pull-right
                            button.btn#help-button
                    .container#help-content.hidden
                    
                .panel-footer
                    ul.pager
                        li#pager-previous.previous.hidden
                            a(role='button')
                                span.glyphicon.glyphicon-menu-left
                                span#previous-label
                        li#pager-startGuide.previous.hidden
                            a(href='#guide')
                                span.glyphicon.glyphicon-menu-left
                                span#back-to-guide-label
                        li#pager-next.next.hidden
                            a(role='button')
                                span#next-label
                                span.glyphicon.glyphicon-menu-right
                        li#pager-finishGuide.next.hidden
                            a(href='#sandbox')
                                span#finish-label
                                span.glyphicon.glyphicon-ok
                #graph-container


        script(src='scripts/app.js')